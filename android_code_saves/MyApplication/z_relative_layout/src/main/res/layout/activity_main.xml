<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/cardview_default_elevation"
    android:paddingRight="@dimen/cardview_default_elevation"
    android:paddingTop="@dimen/cardview_default_elevation"
    android:paddingBottom="@dimen/cardview_default_elevation"
    android:background="@mipmap/room"
    tools:context=".MainActivity">

<!--标题-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="350dp"
        android:textSize="80sp"
        android:text="@string/title1"/>

    

    <!--教学日志-->
    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="252dp"
        android:layout_height="182dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/house" />
    <!--有警告对话框-->
    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:layout_below="@+id/imageButton1"
        android:layout_alignLeft="@+id/imageButton1"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/cup"  />
    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/imageButton1"
        android:layout_toRightOf="@+id/imageButton2"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/diary"
        android:onClick="myclick_imagebutton" />
    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/imageButton3"
        android:layout_toRightOf="@+id/imageButton2"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/tool" />
    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/imageButton1"
        android:layout_toRightOf="@+id/imageButton3"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/weather"
        android:onClick="myclick_imagebutton" />
    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/imageButton5"
        android:layout_toRightOf="@+id/imageButton3"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/paper"
        android:onClick="myclick_imagebutton" />
    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="252dp"
        android:layout_height="182dp"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/imageButton1"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/eq"
        android:onClick="myclick_imagebutton" />
    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:layout_below="@+id/imageButton7"
        android:layout_toRightOf="@+id/imageButton5"
        android:layout_alignRight="@+id/imageButton7"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/identity" />

    <!--日历-->
    <TextClock
        android:layout_width="264dp"
        android:layout_height="206dp"
        android:layout_toRightOf="@+id/imageButton7"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:format12Hour="yyyy/MM/dd HH:mm:ss"
        android:format24Hour="yyyy/MM/dd HH:mm:ss"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="40sp" />


</RelativeLayout>